    <script>
        // Shrinking header on scroll
        window.addEventListener('scroll', function() {
            const title = document.getElementById('companyTitle');
            const btn = document.getElementById('mainMenuBtn');
            const marquee = document.getElementById('marqueeWrapper');
            if (window.scrollY > 40) {
                title.classList.add('small');
                btn.classList.add('shrink');
                marquee.classList.add('hide');
            } else {
                title.classList.remove('small');
                btn.classList.remove('shrink');
                marquee.classList.remove('hide');
            }
        });
        // Image slider
        let currentImageIndex = 0;
        const headerImages = document.querySelectorAll(".header-image");
        function showNextImage() {
            headerImages[currentImageIndex].style.display = "none";
            currentImageIndex = (currentImageIndex + 1) % headerImages.length;
            headerImages[currentImageIndex].style.display = "block";
        }
        headerImages[currentImageIndex].style.display = "block";
        setInterval(showNextImage, 3000);
        // Side panel
        function openNav() { document.getElementById("mySidepanel").style.width = "250px"; }
        function closeNav() { document.getElementById("mySidepanel").style.width = "0"; }
    </script>
