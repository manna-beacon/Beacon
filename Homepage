        <script>
        // Only one 'Read More' open at a time
        document.querySelectorAll('.read-more-button').forEach(function(button) {
            button.addEventListener('click', function() {
                // Close all open read-more-content except this one
                document.querySelectorAll('.read-more-content').forEach(function(content) {
                    if (content !== button.previousElementSibling) {
                        content.style.display = 'none';
                    }
                });
                document.querySelectorAll('.read-more-button').forEach(function(btn) {
                    if (btn !== button) btn.classList.remove('active');
                });
                // Toggle this content
                const readMoreContent = button.previousElementSibling;
                if (readMoreContent.style.display === "block") {
                    readMoreContent.style.display = "none";
                    button.textContent = "Read More";
                    button.classList.remove('active');
                } else {
                    readMoreContent.style.display = "block";
                    button.textContent = "Read Less";
                    button.classList.add('active');
                }
            });
        });
        </script>
